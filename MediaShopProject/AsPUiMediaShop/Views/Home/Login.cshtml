@{
    ViewBag.Title = "Login";

}

<h2>Login</h2>
<button>@Html.ActionLink("Book Page", "Index")</button>
<button>@Html.ActionLink("Dvd Page", "DVD")</button>
<div id="loginupdate"></div>

@using (Ajax.BeginForm("LoginMethod","Home",new AjaxOptions
{
    HttpMethod ="GET",
    UpdateTargetId= "loginupdate",
    InsertionMode = InsertionMode.Replace
}))
{ 

    @Html.TextBox("_name")
    @Html.TextBox("_password")
    <input type="submit" />
}